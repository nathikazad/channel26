<h1>Login</h1>
<%= form_for :user do |f| %>
  <p>
    <%= f.label :username %>:
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label :password %>:
    <%= f.password_field :password  %>
  </p>
  <p>
    <%= f.submit "Login" %>
  </p>
<% end %>

<p>
  Not a member? <%= link_to "Register now!", :action => "register" %>
</p>
