<!DOCTYPE html>
<html>
<head>
  <title>Channel26</title>
  <%= stylesheet_link_tag "bootstrap-responsive",
                          "bootstrap" %>
  <%= javascript_include_tag "jquery-1.7",
                             "jquery-1.7.min",
                             "application", 
                             "bootstrap",
                             "bootstrap-alert",
                             "bootstrap-button",
                             "bootstrap-carousel",
                             "bootstrap-collapse",
                             "bootstrap-dropdown",
                             "bootstrap-tooltip",
                             "bootstrap-popover",
                             "bootstrap-scrollspy",
                             "bootstrap-tab",
                             "bootstrap-modal",
                             "bootstrap-typeahead" %>
</head>
<body>
  <script>
    $(function() {
      $("#search").keyup(function(event){
        if(event.keyCode == 13){
	  $.ajax({ url: "/student/search?query="+escape($(this).val()), cache: true, success: function(html){
              $("#resultsList").html(html);
	      $("#resultsBox").show();
	    }
	  });
        }
      });
    });
  </script>
  <!--Navbar-->
  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container-fluid">
        <!--Logo-->
	<%= link_to 'Channel26', student_index_path, :class =>"brand" %>
	<!--Search Box-->
	<form class="navbar-search pull-left" action="">
	  <input type="text" class="search-query span6" id="search" placeholder="Search" onblur="$('#resultsBox').hide();">
	  <div id="resultsBox" class="dropdown-menu" style="display:none;">
	    <ul id="resultsList">
	    </ul>
	  </div>
	</form>
        <!--Logged in Box-->
	<% if session[:user_id] %>
	  <ul class="nav nav-list pull-right">
	  <li class="divider-vertical"> </li>
	  <li> <%= link_to 'Logout', student_logout_path %> </li>
	  </ul>
	  <p class="navbar-text pull-right">Logged in as <a href="#"><%= Student.find(session[:user_id]).first_name %> <%= Student.find(session[:user_id]).last_name %></a></p>
        <% else %>
	  <ul class="nav nav-list pull-right">
	    <li><%= link_to 'Log In', student_login_path %></li>
            <li class="divider-vertical"></li>
	    <li><%= link_to 'Register', student_register_path %></li>
	  </ul>
	<% end %>
      </div>
    </div>
  </div>

  <!--Main Page-->
  <div class="container-fluid">
    <br/><br/><br/>
    <div class="row-fluid">
      <%= yield %>
    </div>
  </div>

  <!--Horizontal Split-->
  <hr/>

  <!--Footer-->
  <div class="container-fluid">
    <div class="row-fluid">
      <footer>
        &copy; 2012 Channel26 ALL RIGHTS RESERVED
      </footer>
    </div>
  </div>

</body>
</html>
